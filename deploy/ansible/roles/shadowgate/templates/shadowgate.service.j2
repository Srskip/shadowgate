[Unit]
Description=ShadowGate - Stealth Redirector and Deception Gateway
Documentation=https://github.com/your-org/shadowgate
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ shadowgate_user }}
Group={{ shadowgate_group }}
ExecStart={{ shadowgate_install_dir }}/shadowgate -config {{ shadowgate_config_dir }}/config.yaml
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5s

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
PrivateDevices=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectControlGroups=yes
RestrictSUIDSGID=yes
RestrictRealtime=yes

# Allow binding to privileged ports if needed
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE

# File system access
ReadWritePaths={{ shadowgate_log_dir }} {{ shadowgate_data_dir }}
ReadOnlyPaths={{ shadowgate_config_dir }}

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier={{ shadowgate_service_name }}

# Resource limits
LimitNOFILE=65535
LimitNPROC=4096

[Install]
WantedBy=multi-user.target
